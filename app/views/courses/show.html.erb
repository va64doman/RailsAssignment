<% provide(:title, "Show #{@course.name}") %>

<% # Show all course's details %>

<p id="notice"><%= notice %></p>

<h1><%= @course.name %></h1>

<p>
	<strong>Name: </strong>
	<%= @course.name %>
</p>

<p>
	<strong>Info: </strong>
	<%= @course.info %>
</p>

<p>
	<strong>Description: </strong>
	<%= @course.description %>
</p>

<p>
	<strong>Subject: </strong>
	<%= @course.subject %>
</p>

<p>
	<strong>Type of Study: </strong>
	<%= @course.study %>
</p>

<% # See all users connected to this course %>

<p>
	<strong>List of users: </strong>
	<ul>
	<% @course.user.each do |user| %>
        <li><%= user.name %></li>
    <% end %>
	</ul>
</p>

<p>
	<strong>List of contents: </strong>
	<ul>
	<% @course.course_contents.each do |content| %>
        <li><%= content.name %></li>
    <% end %>
	</ul>
</p>

<%= link_to 'Back', display_course_path %>