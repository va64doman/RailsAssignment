<%= form_for(@course) do |f| %>
  <% if @course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@course.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :info %>
    <%= f.text_area :info %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :subject %>
    <%= f.text_field :subject %>
  </div>

  <% # Display type of study as drop down %>

  <div class="field">
    <%= f.label :study, "Type of Study" %>
    <%= f.select :study, 
    options_for_select([["Full Time", "Full Time"], ["Part Time", "Part Time"], ["Online Study", "Online Study"]]) %>
  </div>

  <% # Add form from course content fields if wanted course to has many contents %>

  <div class="field">

    <section>
      <h4>Course Contents</h4>

      <%= f.fields_for :course_contents do |forms| %>
        <%= render partial: 'course_content_fields', locals: { f: forms } %>
      <% end %>

      <% # Add another contents from form %>

      <div class = "links">
        <%= link_to_add_association 'Add Course Content', f, :course_contents %>
      </div>
    </section>

  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', display_course_path %>