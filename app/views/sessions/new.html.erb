<% provide(:title, "Login") %>

<% flash.each do |message_type, message| %>
	<div id="alert"><%= message %></div>
<% end %>

<% # Display login form, display error if user can not login %>
<h1>Login</h1>
<%= form_for :session, url: login_path do |f| %>
	<p>
		<%= f.label :email %>
		<%= f.email_field :email %> 
	</p>
	
	<p>
		<%= f.label :password %>
		<%= f.password_field :password %>
	</p>

	<%= f.submit "Login" %>
<% end %>