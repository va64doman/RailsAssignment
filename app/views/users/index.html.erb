<% provide(:title, "Users Details") %>

<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Password digest</th>
      <th>Type of User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.password_digest %></td>
        <td>
          <% case user.admin %>
            <% when 1 %>
              Student
            <% when 2 %>
              Lecturer
            <% else %>
              Admin
          <% end %>
        </td>
        <td><%= link_to 'Show', users_path %></td>
        <td><%= link_to 'Edit', edit_users_path(user) %></td>
        <td><%= link_to 'Destroy', users_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_users_path %>
